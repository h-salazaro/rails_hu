<% @questions.each do |question| %>
  <div class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object" src="<%= question.gravatar %>" alt="...">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= question.email %></h4>
      <div><%= time_ago_in_words question.created_at %> ago</div>
      <%= question.body %>
      <div>
        <%= link_to "See answers", question, class:"btn btn-default btn-xs" %>
      </div>
    </div>
  </div>
<% end %>

<% if @questions.empty? %>
  <div class="alert alert-info">You have no questions!</div>
<% end %>
